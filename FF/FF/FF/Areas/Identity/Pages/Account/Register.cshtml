@page
@model RegisterModel

@{
    ViewData["Title"] = "تسجيل حساب جديد";
    // استخدم الـ Layout الجديد الذي يحتوي على Tailwind بدون الهيدر والفوتر الرئيسي
    // تأكد أن هذا المسار يشير إلى _AuthLayout.cshtml الموجود في Views/Shared/
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-xl w-full space-y-10 p-10 bg-white rounded-3xl shadow-2xl border border-blue-100 transform transition-all duration-300 hover:shadow-3xl">
        <div>
            <h2 class="mt-6 text-center text-4xl sm:text-5xl font-extrabold text-gray-900 tracking-tight">
                Create a New Account
            </h2>
            <p class="mt-2 text-center text-lg text-gray-600">
                Join us today! Please fill in your details.
            </p>
        </div>

        <!-- Main content area, now a single column -->
        <div class="space-y-8">
            <!-- Local Account Registration Section -->
            <div>
                <h3 class="text-2xl font-semibold text-gray-800 mb-6 border-b pb-2 text-center">Register with a local account.</h3>
                <section>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4 font-medium" role="alert"></div>

                        <!-- Full Name Field -->
                        <div>
                            <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                            <input asp-for="Input.FullName" class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-base transition duration-150 ease-in-out" autocomplete="name" aria-required="true" placeholder="Enter your full name" />
                            <span asp-validation-for="Input.FullName" class="text-red-600 text-xs mt-1 block"></span>
                        </div>

                        <!-- Email Field -->
                        <div>
                            <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Email address</label>
                            <input asp-for="Input.Email" class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-base transition duration-150 ease-in-out" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-red-600 text-xs mt-1 block"></span>
                        </div>

                        <!-- Password Field -->
                        <div>
                            <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                            <input asp-for="Input.Password" class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-base transition duration-150 ease-in-out" autocomplete="new-password" aria-required="true" placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-red-600 text-xs mt-1 block"></span>
                        </div>

                        <!-- Confirm Password Field -->
                        <div>
                            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-base transition duration-150 ease-in-out" autocomplete="new-password" aria-required="true" placeholder="Confirm your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-xs mt-1 block"></span>
                        </div>

                        <!-- Register Button -->
                        <div>
                            <button id="registerSubmit" type="submit" class="group relative w-full flex justify-center py-3 px-6 border border-transparent text-lg font-medium rounded-lg text-white bg-gray-700  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200 ease-in-out transform hover:scale-105 shadow-md hover:shadow-lg">
                                Register
                            </button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
