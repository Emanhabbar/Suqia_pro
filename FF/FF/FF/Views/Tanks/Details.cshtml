@model FF.Models.Tank

@{
    ViewData["Title"] = "Tank Details"; // Changed title to be more specific
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure it uses the sidebar layout
}



<!-- Main container for the details, styled as a card -->
<div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100 max-w-2xl mx-auto" dir="rt">
    @* Added dir="rtl" for right-to-left content flow *@
    <h4 class="text-2xl font-semibold text-gray-800 mb-6 border-b pb-2 text-left">Tank Information</h4> @* Adjusted heading and alignment *@
    <div class="space-y-6">
        @* Added spacing between detail rows *@
        <!-- Name Field (Read-only) -->
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Tank Name</label>
            <input asp-for="Name" class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 bg-gray-50 text-gray-900 cursor-not-allowed" readonly /> @* Added readonly and bg-gray-50 for disabled look *@
        </div>

        <!-- Capacity Field (Read-only) -->
        <div>
            <label asp-for="Capacity" class="block text-sm font-medium text-gray-700 mb-1">Capacity (Barrels)</label>
            <input asp-for="Capacity" class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 bg-gray-50 text-gray-900 cursor-not-allowed" readonly /> @* Added readonly and bg-gray-50 for disabled look *@
        </div>

        <!-- Price Per Barrel Field (Read-only) -->
        <div>
            <label asp-for="PricePerBarrel" class="block text-sm font-medium text-gray-700 mb-1">Price Per Barrel</label>
            <input asp-for="PricePerBarrel" class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 bg-gray-50 text-gray-900 cursor-not-allowed" readonly /> @* Added readonly and bg-gray-50 for disabled look *@
        </div>

        <!-- Owner Field (Read-only) -->
        <div>
            <label asp-for="Owner" class="block text-sm font-medium text-gray-700 mb-1">Owner</label>
            <input value="@Model.Owner.FullName" class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 bg-gray-50 text-gray-900 cursor-not-allowed" readonly /> @* Display FullName and make read-only *@
        </div>

        <!-- Areas Served Field (Read-only) -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Areas Served</label>
            <textarea rows="3" class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 bg-gray-50 text-gray-900 cursor-not-allowed" readonly>@string.Join(", ", Model.Areas.Select(a => a.Name))</textarea> @* Display names of served areas and make read-only *@
        </div>
    </div>

    <!-- Buttons and Back to List Link Container -->
    <div class="flex justify-between items-center pt-8">
        @* Adjusted padding-top *@
        <!-- Edit Button -->
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-sidebar-bg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-700 transition duration-300 transform hover:scale-105">
            <i class="fas fa-edit mr-2"></i> Edit
        </a>

        <!-- Back to List Link -->
        <a asp-action="Index" class="text-#1F2937 hover:text-blue-700 font-medium transition duration-150 ease-in-out">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
